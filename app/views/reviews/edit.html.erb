<h1>Edit Review</h1>

<center>
<%= form_tag "/items/#{@review.item.id}/reviews/#{@review.id}", method: :patch  do %>
  <%= label_tag :title %>
  <%= text_field_tag :title , "#{@review.title}"%>

  <%= label_tag :content %>
  <%= text_field_tag :content, "#{@review.content}" %>

  <%= label_tag 'Rating (1-5)' %>
  <%= text_field_tag :rating, "#{@review.rating}" %>

  <%= submit_tag 'Update Review' %>
<% end %>
</center>
